            "control": {
                "arrows": true,
                "arrow-step": 0.1,
                "big-arrows": true,
                "big-arrow-step": 0.5,
                "slider": true,
                "slider-step": 0.1,
                "input": true
            }
        },
        "adjustment-title": {
            "type": "title",
            "name": "Speed Adjustment Options",
            "description": "Options for customising the speed adjustment parts of this mod. These options will not have any effect if the randomiser is enabled."
        },
        "half-speed": {

{
    "geode": "4.1.1",
    "gd": {
        "win": "2.2074",
        "android": "2.2074",
        "mac": "2.2074",
        "ios": "2.2074"
    },
    "id": "mariomastr.customisable-speed-portals",
    "name": "ReSpeed",
    "version": "v1.1.1",
    "developers": ["MarioMastr", "PizzaTowerFanGD"],
    "description": "Allows you to tweak the speed of each speed portal individually from one another.",
    "repository": "https://github.com/MarioMastr/Accurate-Speed-Portals",
    "settings": {
        "enable-mod": {
            "name": "Enable",
            "description": "Enables the mod's changes. Disable this if you hate fun and/or just want to play regular GD.",
            "type": "bool",
            "default": true
        },
        "random-title": {
            "type": "title",
            "name": "Speed Randomisation Options",
            "description": "Options for customising the speed randomisation parts of this mod."
        },
        "random-speed": {
            "enable-if": "enable-mod",
            "name": "Random speed",
            "description": "Randomises the speed value for each portal.",
            "type": "bool",
            "default": true
        },
        "min-speed": {
            "enable-if": "enable-mod && random-speed",
            "name": "Minimum speed",
            "description": "Minimum speed to use in the randomisation range. Must have \"random speed\" option enabled for this to have any use in any way shape or form.",
            "type": "float",
            "default": 0.0,
            "min": 0.0,
            "control": {
                "arrows": true,
                "arrow-step": 0.1,
                "big-arrows": true,
                "big-arrow-step": 0.5,
                "slider": true,
                "slider-step": 0.1,
                "input": true
            }
        },
        "max-speed": {
            "enable-if": "enable-mod && random-speed",
            "name": "Maximum speed",
            "description": "Maximum speed to use in the randomisation range. Must have \"random speed\" option enabled for this to have any use in any way shape or form.",
